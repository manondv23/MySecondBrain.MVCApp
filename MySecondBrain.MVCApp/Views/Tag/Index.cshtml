@model MySecondBrain.Application.ViewModels.TagListViewModel

@{
    ViewData["Title"] = "Tag";
}
  
  <div class="site-wrap">

    <div class="site-mobile-menu">
      <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
          <span class="icon-close2 js-menu-toggle"></span>
        </div>
      </div>
      <div class="site-mobile-menu-body"></div>
    </div>
    
   

  

    <div class="site-blocks-cover overlay" style="background-image: url(images/connect.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">

          <div class="col-md-12">
            
            
            <div class="row justify-content-center mb-4">
              <div class="col-md-8 text-center">
                  <h1 class="" data-aos="fade-up">Welcome to your dashboard @User.Identity.Name!</h1>
                <p data-aos="fade-up" data-aos-delay="100">Here, you will be able to view your notes and classify them.</p>
              </div>
            </div>

           

          </div>
        </div>
      </div>
    </div>  

    <div class="site-section bg-light">
        <div class="container">

            <div class="overlap-category mb-5 align-items-center">
                <div class="row align-items-stretch no-gutters">
                    <div class="col">
                        <a href="Category" class="popular-category h-100">
                            <span class="icon"><span class="flaticon-house"></span></span>
                            <span class="caption mb-2 d-block">Categories</span>
                            <span class="number">@Model.CategoriesCount</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="Note" class="popular-category h-100">
                            <span class="icon"><span class="flaticon-books"></span></span>
                            <span class="caption mb-2 d-block">Notes</span>
                            <span class="number">@Model.NotesCount</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="Tag" class="popular-category h-100">
                            <span class="icon"><span class="flaticon-innovation"></span></span>
                            <span class="caption mb-2 d-block">Tags</span>
                            <span class="number">@Model.TagsCount</span>
                        </a>
                    </div>

                </div>
            </div>

            <div class="row justify-content-center mb-5">
                <div class="col-md-7 text-center border-primary">
                    <h2 class="font-weight-light text-primary">My Tags</h2>
                   
                </div>
            </div>
           
               
            

                <div class="col">
                    <div class="row mb-3 align-items-stretch">
                  

                        @foreach (var item in @Model.Tags)
                        {
                            <div class="col">
                                <a href="listings-single.html" class="img d-block" style="background-image: url('images/img_1.jpg')"></a>
                                <div class="lh-content">
                                    <p>@item.TagName</p>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@item.TagId" class="btn btn-primary btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.TagId" class="btn btn-danger btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete">Delete</a>
                                </div>
                                </div>
                            </div>
                        } 
                     


                    </div>
               </div>

               @if (Model.TagsCount != 0) {
             
                @using (Html.BeginForm("Index", "Tag", FormMethod.Post))
                
                {

                <div class="form-search-wrap" data-aos="fade-up" data-aos-delay="200">

                    <div class="row align-items-center">


                        <h3>Search:</h3>


                        <div class="col-lg-16 mb-4 mb-xl-0 col-xl-3">
                            @Html.TextBoxFor(m => m.query, new { cols = "30", rows = "7", @class = "form-control", required = "required", pattern="[A-Za-z0-9]{3,20}", title="This field is required" })                  
                        </div>

                        <div class="col-lg-12 mb-4 mb-xl-0 col-xl-3">
                            <input type="submit" class="btn btn-primary btn-block rounded" value="Search">
                        </div>

                    </div>

                </div>
            }
            }
                
            </div>

           
        </div>
    
 
    

          <div class="col-12 text-center mt-4">
            <a asp-controller="Tag" asp-action="Create" class="btn btn-primary rounded py-2 px-4 text-white">+ New tag</a>
          </div>

          <div class="col-12 text-center mt-4">
        </div>
     
   </div>

    
  
  
    
  
  