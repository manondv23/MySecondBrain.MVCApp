@model MySecondBrain.Application.ViewModels.CategoryListViewModel

@{
    ViewData["Title"] = "Category";
}
  
  <div class="site-wrap">

    <div class="site-mobile-menu">
      <div class="site-mobile-menu-header">
        <div class="site-mobile-menu-close mt-3">
          <span class="icon-close2 js-menu-toggle"></span>
        </div>
      </div>
      <div class="site-mobile-menu-body"></div>
    </div>
    
   

  

    <div class="site-blocks-cover overlay" style="background-image: url(images/connect.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">

          <div class="col-md-12">
            
            
            <div class="row justify-content-center mb-4">
              <div class="col-md-8 text-center">
                  <h1 class="" data-aos="fade-up">Welcome to your dashboard @User.Identity.Name!</h1>
                <p data-aos="fade-up" data-aos-delay="100">Here, you will be able to view your notes and classify them.</p>
              </div>
            </div>

           

          </div>
        </div>
      </div>
    </div>  

    <div class="site-section bg-light">
        <div class="container">

            <div class="overlap-category mb-5 align-items-center">
                <div class="row align-items-stretch no-gutters">
                    <div class="col">
                        <a href="Category" class="popular-category h-100">
                            <span class="icon"><span class="flaticon-house"></span></span>
                            <span class="caption mb-2 d-block">Categories</span>
                            <span class="number">@Model.CategoriesCount</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="Note" class="popular-category h-100">
                            <span class="icon"><span class="flaticon-books"></span></span>
                            <span class="caption mb-2 d-block">Notes</span>
                            <span class="number">@Model.NotesCount</span>
                        </a>
                    </div>
                    <div class="col">
                        <a href="Tag" class="popular-category h-100">
                            <span class="icon"><span class="flaticon-innovation"></span></span>
                            <span class="caption mb-2 d-block">Tags</span>
                            <span class="number">@Model.TagsCount</span>
                        </a>
                    </div>

                </div>
            </div>

            <div class="row justify-content-center mb-5">
                <div class="col-md-7 text-center border-primary">
                    <h2 class="font-weight-light text-primary">My Categories</h2>
                   
                </div>
            </div>
           
               
            @if (Model.ListDossiers.Count != 0)
            {

                <div class="col">
                    <div class="row mb-3 align-items-stretch">


                        @foreach (var item in Model.ListDossiers)
                        {
                            <div class="col">
                                <a href="listings-single.html" class="img d-block" style="background-image: url('images/img_1.jpg')"></a>
                                <div class="lh-content">
                                    <p>@item.Nom</p>
                                    <div>
                                        <a asp-action="Edit" asp-route-id="@item.Iddossier" class="btn btn-primary btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.Iddossier" class="btn btn-danger btn-sm rounded-0" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete">Delete</a>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            }

                
            </div>

           
        </div>
    
 
    

          <div class="col-12 text-center mt-4">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded py-2 px-4 text-white">+ New category</a>
          </div>

          <div class="col-12 text-center mt-4">
        </div>
     
   </div>

    
  
  
    
  
  